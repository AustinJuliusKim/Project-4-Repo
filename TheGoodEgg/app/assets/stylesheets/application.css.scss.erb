 @import 'bootstrap';
 @import 'bootstrap-sprockets';
 @import 'bootstrap/glyphicons';
 @import url(http://fonts.googleapis.com/css?family=Libre+Baskerville);


h1 {
	font-family: 'Helvetica Neue';
	font-weight: 100;
	font-size: 60px;
}

p {
	font-family: 'Libre Baskerville', serif;
	font-weight: 200;
	font-size: 16px;
}

.container {
	width: 100%;
	margin: 0px auto;
	background-color: white;
	// 	;
	text-align: center;	
}

.imagebox{
	background: url(<%= image_path 'pictures/family.jpg' %>) no-repeat;
	background-size: 100%;
	width: 100%;
	height: 300px;
	background-color: white;
}
.glam{
	background: url(<%= image_path 'pictures/glam.jpg' %>) no-repeat center;
	background-size: 100%;
	width: 100%;
	height: 340px;
	

}

// chicken
.chicken{
	height: 80px;
	width: 70px;
}
// end

#title {
	display:inline-block;
}

#product-index{
	margin: 0 auto;
	background: -webkit-linear-gradient(top, #FFFFFF 0%, #FFEABD 61%,  #FFFFFF 100%); /* Chrome10+,Safari5.1+ */
	background-color: #C47835;
	display:block;
 	width: 720px;
 	height: 900px;
 	border: 1px black solid;
	-webkit-border-radius: 63px 63px 63px 63px / 108px 108px 72px 72px;
 border-radius: 50% 50% 50% 50% / 60% 60% 40% 40%;
}

#cart-row{
	max-width: 80%;
	margin: 0 auto;
}
