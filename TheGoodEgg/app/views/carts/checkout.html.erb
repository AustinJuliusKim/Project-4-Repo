<div class="shopping-cart">
<h1>Confirm Order Details</h1>
	<%= render 'shopping_cart' %>
	<div class="text-right">
		<h3><strong>Subtotal = <%= number_to_currency current_order.subtotal %></strong></h3>
	</div>
	<div class="text-right">
		<h3><strong>Tax = <%= number_to_currency current_order.tax %></strong></h3>
	</div>
	<div class="text-right">
		<h3><strong>Shipping = <%= number_to_currency current_order.shipping %></strong></h3>
	</div>
	<hr>
	<div class="text-right">
		<h3><strong>Total = <%= number_to_currency current_order.total %></strong></h3>
	</div>

	<hr>
	<div class="text-right">
 			<%= link_to "Place Order",  cart_order_placed_path, class: "btn btn-link" %>
 	</div>
 	<div>
 	<hr>
 	</div>
</div>
