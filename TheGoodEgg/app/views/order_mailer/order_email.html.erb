<h1>Thank you for placing an order! We appreciate your business. Please allow 2-5 business days for order processing. Your order will be delivered 1-2 business days after your order has processed.</h1>

<table class="table table-hover">
	<theader>
		<th>Item Name</th>
		<th>Price</th>
		<th>Quantity</th>
		<th>Unit Price</th>
		<th>Total Price</th>
	</theader>
	<% @order.order_items.each do |order_item| %>
	<tbody>
		<td><%= order_item.product.name %></td>
		<td><%= order_item.product.price %></td>
		<td><%= order_item.quantity %></td>
		<td><%= order_item.unit_price %></td>
		<td><%= order_item.total_price %></td>
	</tbody>
	<% end %>
</table>
<hr>
<div>
	<%= @order.subtotal %>
	<%= @order.tax %>
	<%= @order.shipping %>
	<hr>
	<%= @order.total %>
</div>


