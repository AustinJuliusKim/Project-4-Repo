<p id="notice"><%= notice %></p>
<div class="row">
	<div class="col-md-4">
		<p>
		  <strong>Email:</strong>
		  <%= @user.email %>
		</p>

		<p>
		  <strong>Password:</strong>
		  <%= @user.password %>
		</p>

		<p>
		  <strong>Name:</strong>
		  <%= @user.name %>
		</p>
	</div>  <!-- end of col -->

	<div class="col-md-4">
	<ul>
	<% @orders.reverse.each do |order| %>
		<li>
			<%= link_to "Order Details", order_path(order) %>
			<strong><%= order.order_status(:order_status_id).name %></strong>
			<%= order.inspect %>
			<ul>
				<% order.order_items.each do |order_item| %>
					<li><%= order_item.product(:product_id).name %> -
					<%= order_item.product(:produt_id).price %>
					</li>
				<% end %>
			</ul>
		</li>
	<% end %>
	</ul>
	</div>


</div>  <!-- end of row -->

<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
