@import "bootstrap-sprockets";
@import "bootstrap";
@import url(http://fonts.googleapis.com/css?family=Libre+Baskerville);

.home-container{
	width: 100%
}

.imagebox{
	background: url(<%= image_path 'pictures/family.jpg' %>) no-repeat center;
	background-size: 100%;
	width: 100%;
	height:275px;
	background-color: black;

}
.glam{
	background: url(<%= image_path 'pictures/glam.jpg' %>) no-repeat center;
	background-size: 100%;
	width: 100%;
	height:200px;
	background-color: black;

}

.container {
	width: 80%;
	margin: 100px auto;
	padding: 20px;
	background: black;
	background-color: rgba(0,0,0,0.6);
	text-align: center;
	border-radius: 40px;
	
}


h1 {
	font-family: 'Helvetica Neue';
	font-weight: 100;
	font-size: 60px;
}

p {
	font-family: 'Libre Baskerville', serif;
	font-weight: 200;
	font-size: 16px;
}










