<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<p>
  <strong>Password:</strong>
  <%= @user.password %>
</p>

<h4>Previous Orders</h4>
<div>
	<% @orders.reverse.each do |order| %>
	<ul>
		<li>
			<%= link_to "Order Details", order_path(order) %>
			<%= order.id %>
			<strong><%= order.quantity %></strong>
			<%= order.total_price %>
		</li>
	</ul>
	<% end %>
</div>


